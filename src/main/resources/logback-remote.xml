<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
    <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldNames><message>[ignore]</message></fieldNames>
            <provider class="net.logstash.logback.composite.loggingevent.LoggingEventPatternJsonProvider">
                <pattern>{ "message": "[%X] - %m" }</pattern>
            </provider>
        </encoder>
    </appender>

    <appender name="auditLogger" class="com.papertrailapp.logback.Syslog4jAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{"yyyy-MM-dd'T'HH:mm:ss,SSSXXX", UTC} %level] %logger{15} : %mdc - %m%n%xEx</pattern>
        </layout>

        <syslogConfig class="org.productivity.java.syslog4j.impl.net.tcp.TCPNetSyslogConfig">
            <host>audit.nais</host>
            <port>6514</port>
            <ident>altinn-admin</ident>
            <maxMessageLength>128000</maxMessageLength>
        </syslogConfig>
    </appender>

    <logger level="INFO" name="auditLogger" additivity="false">
        <appender-ref ref="auditLogger" />
    </logger>

    <logger name="no.nav" level="INFO"/>
    <logger name="ktor.application" level="DEBUG"/>
    <logger name="io.ktor" level="TRACE"/>
    <logger name="org.apache.cxf.service.invoker.AbstractInvoker" level="OFF" />
    <logger name="org.apache.cxf.service" level="WARN" additivity="false"/>
    <logger name="org.apache.cxf.ws.addressing" level="ERROR" />

    <root level="WARN">
        <appender-ref ref="stdout_json"/>
    </root>
</configuration>
